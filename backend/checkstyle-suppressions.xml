<?xml version="1.0"?>
<!--suppress XmlUnboundNsPrefix -->
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
    Checkstyle suppressions file.
    Allows excluding certain checks for specific files or directories.

    Syntax:
    <suppress checks="check_name" files="path_pattern"/>

    Examples:
    - Exclude all checks for tests:
      <suppress checks=".*" files="[\\/]src[\\/]test[\\/].*"/>
    - Exclude specific check:
      <suppress checks="MagicNumber" files=".*"/>
-->

<suppressions>
    <!-- Suppress checks for Lombok annotated classes -->
    <suppress checks="VisibilityModifier" files=".*[\\/]src[\\/]main[\\/]java[\\/].*[\\/]model[\\/].*[Dd]to[\\/].*\.java"/>
    <suppress checks="Javadoc" files=".*[\\/]src[\\/]main[\\/]java[\\/].*[\\/]model[\\/].*[Dd]to[\\/].*\.java"/>

    <!-- Suppress for tests (disable all checks in src/test/java) -->
    <suppress checks=".*" files=".*[\\/]src[\\/]test[\\/]java[\\/].*\.java"/>
    <!-- Keep examples of specific suppressions for future extension -->
    <suppress checks="JavadocMethod" files="[\\/]src[\\/]test[\\/].*\.java"/>
    <suppress checks="MagicNumber" files="[\\/]src[\\/]test[\\/].*\.java"/>

    <!-- Suppress for Lombok annotations -->
    <suppress checks=".*" files=".*\$\$Lambda\$.*\.java"/>

    <!-- Suppress for generated code -->
    <!-- Maven generated sources (including OpenAPI) -->
    <suppress checks=".*" files=".*[\\/]target[\\/]generated-sources[\\/].*\.java"/>
    <suppress checks=".*" files=".*[\\/]target[\\/]generated-test-sources[\\/].*\.java"/>
    <!-- OpenAPI Generator (specific directory) -->
    <suppress checks=".*" files=".*[\\/]target[\\/]generated-sources[\\/]openapi[\\/].*\.java"/>
    <!-- For future: if generated code ends up in src/main/java/**/generated/** -->
    <suppress checks=".*" files=".*[\\/]src[\\/]main[\\/]java[\\/].*[\\/]generated[\\/].*\.java"/>

    <!-- Suppress for Spring Boot Actuator -->
    <suppress checks="HideUtilityClassConstructor" files="[\\/]src[\\/]main[\\/]java[\\/]org[\\/]springframework[\\/]boot[\\/]actuate[\\/].*\.java"/>

    <!-- Additional suppressions for specific cases -->
    <suppress checks="FinalClass" files=".*Config\.java"/>
    <suppress checks="HideUtilityClassConstructor" files=".*Util(s)?\.java"/>
    <suppress checks="DesignForExtension" files=".*Service\.java"/>
    <suppress checks="NewlineAtEndOfFile" files="[\\/]src[\\/]main[\\/]resources[\\/].*\.(properties|xml|yml|yaml)"/>

    <!-- Suppress for ValidationConstants.java - file contains large number of constants -->
    <suppress checks="JavadocVariable" files=".*ValidationConstants\.java"/>
</suppressions>
