# 🚀 ПРИСКОРЕННЯ NPM
audit=false
fund=false
progress=false

# 📦 КЕШУВАННЯ (оновлені налаштування)
prefer-online=false
prefer-offline=true

# 🔗 МЕРЕЖА
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# ⚡ ПАРАЛЕЛІЗМ
maxsockets=20

# 🛡️ БЕЗПЕКА (відключаємо провірку для швидкості)
audit-level=none
package-lock=true

# 📊 ЛОГУВАННЯ
loglevel=warn

# 🌐 РЕЄСТР
registry=https://registry.npmjs.org/
