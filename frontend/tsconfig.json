{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@features/order-wizard/*": ["./features/order-wizard/*"],
      "@features/order-wizard/wizard/*": ["./features/order-wizard/wizard/*"],
      "@features/order-wizard/clients/*": ["./features/order-wizard/clients/*"],
      "@features/order-wizard/branches/*": ["./features/order-wizard/branches/*"],
      "@features/order-wizard/items/*": ["./features/order-wizard/items/*"],
      "@features/order-wizard/price-calculator/*": ["./features/order-wizard/price-calculator/*"],
      "@features/order-wizard/orders/*": ["./features/order-wizard/orders/*"],
      "@features/order-wizard/ui/*": ["./features/order-wizard/ui/*"],
      "@features/order-wizard/shared/*": ["./features/order-wizard/shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
