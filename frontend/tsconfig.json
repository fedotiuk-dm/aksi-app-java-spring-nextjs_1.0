{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/api": ["./lib/api"],
      "@/lib/api/*": ["./lib/api/*"],
      "@features/order-wizard/*": ["./features/order-wizard/*"],

      // üåç API alias'–∏ –¥–ª—è –≤—Å—ñ—Ö –º–æ–¥—É–ª—ñ–≤
      "@api/auth": ["./shared/api/generated/auth"],
      "@api/auth/*": ["./shared/api/generated/auth/*"],
      "@api/branch": ["./shared/api/generated/branch"],
      "@api/branch/*": ["./shared/api/generated/branch/*"],
      "@api/cart": ["./shared/api/generated/cart"],
      "@api/cart/*": ["./shared/api/generated/cart/*"],
      "@api/customer": ["./shared/api/generated/customer"],
      "@api/customer/*": ["./shared/api/generated/customer/*"],
      "@api/file": ["./shared/api/generated/file"],
      "@api/file/*": ["./shared/api/generated/file/*"],
      "@api/order": ["./shared/api/generated/order"],
      "@api/order/*": ["./shared/api/generated/order/*"],
      "@api/priceList": ["./shared/api/generated/priceList"],
      "@api/priceList/*": ["./shared/api/generated/priceList/*"],
      "@api/pricing": ["./shared/api/generated/pricing"],
      "@api/pricing/*": ["./shared/api/generated/pricing/*"],
      "@api/receipt": ["./shared/api/generated/receipt"],
      "@api/receipt/*": ["./shared/api/generated/receipt/*"],
      "@api/user": ["./shared/api/generated/user"],
      "@api/user/*": ["./shared/api/generated/user/*"],
      "@api/game": ["./shared/api/generated/game"],
      "@api/game/*": ["./shared/api/generated/game/*"],

      // üéØ –î–æ–º–µ–Ω–Ω—ñ alias'–∏
      "@domains/*": ["./domains/*"],
      "@domains/wizard/*": ["./domains/wizard/*"],

      // üîß –°–ø—ñ–ª—å–Ω—ñ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∏
      "@shared/*": ["./shared/*"],
      "@shared/ui": ["./shared/ui"],
      "@shared/lib": ["./shared/lib"],

      // üéÆ Game Boosting Calculator –∞–ª—ñ–∞—Å–∏
      "@game-boosting-calculator": ["./features/game-boosting-calculator"],
      "@game-boosting-calculator/*": ["./features/game-boosting-calculator/*"],
      "@game-boosting-calculator/store": ["./features/game-boosting-calculator/store"],
      "@game-boosting-calculator/store/*": ["./features/game-boosting-calculator/store/*"],
      "@game-boosting-calculator/hooks": ["./features/game-boosting-calculator/hooks"],
      "@game-boosting-calculator/hooks/*": ["./features/game-boosting-calculator/hooks/*"],
      "@game-boosting-calculator/components": ["./features/game-boosting-calculator/components"],
      "@game-boosting-calculator/components/*": ["./features/game-boosting-calculator/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next/**/*"]
}
