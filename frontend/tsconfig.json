{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/lib/api": ["./lib/api"],
      "@/lib/api/*": ["./lib/api/*"],
      "@features/order-wizard/*": ["./features/order-wizard/*"],

      // üöÄ API —Ç–∞ Zod —Å—Ö–µ–º–∏ alias'–∏ –¥–ª—è –∑—Ä—É—á–Ω–æ—Å—Ç—ñ
      "@api/wizard": ["./shared/api/generated/wizard"],
      "@api/wizard/*": ["./shared/api/generated/wizard/*"],
      "@api/wizard/zod": ["./shared/api/generated/wizard/zod"],
      "@api/wizard/types": ["./shared/api/generated/wizard/aksiApi.schemas"],
      "@api/auth": ["./shared/api/generated/auth"],
      "@api/auth/*": ["./shared/api/generated/auth/*"],
      "@api/auth/zod": ["./shared/api/generated/auth/zod"],
      "@api/auth/types": ["./shared/api/generated/auth/authApi.schemas"],

      // üéØ –î–æ–º–µ–Ω–Ω—ñ alias'–∏
      "@domains/*": ["./domains/*"],
      "@domains/wizard/*": ["./domains/wizard/*"],

      // üîß –°–ø—ñ–ª—å–Ω—ñ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∏
      "@shared/*": ["./shared/*"],
      "@shared/ui": ["./shared/ui"],
      "@shared/lib": ["./shared/lib"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next/**/*"]
}
