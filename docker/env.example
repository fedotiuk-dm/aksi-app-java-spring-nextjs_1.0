# AKSI Dry Cleaning System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Configuration
POSTGRES_DB=aksi_prod
POSTGRES_USER=aksi_prod
POSTGRES_PASSWORD=your_secure_db_password_here

# Database Connection Details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aksi_prod
DB_USERNAME=aksi_prod
DB_PASSWORD=your_secure_db_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URLs
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (generate a secure random string)
JWT_SECRET=your_256_bit_jwt_secret_here

# Security Headers
SECURE_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_ATTEMPTS_PER_USER=5
MAX_ATTEMPTS_PER_IP=100
LOCKOUT_DURATION_MINUTES=15

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=480
MAX_CONCURRENT_SESSIONS=3

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# File Upload Configuration
FILE_UPLOAD_DIR=/app/uploads
FILE_BASE_URL=https://api.yourdomain.com
FILE_API_PATH=/api/files
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# GlitchTip Error Monitoring
GLITCHTIP_DSN=https://your-glitchtip-dsn-here
GLITCHTIP_ENVIRONMENT=production
GLITCHTIP_TRACES_SAMPLE_RATE=0.1
GLITCHTIP_DEBUG=false

# Logging Configuration
LOG_LEVEL_COM_AKSI=INFO
LOG_LEVEL_SPRING_SECURITY=WARN
LOG_LEVEL_HIBERNATE=WARN

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================

# Docker Registry
DOCKER_REGISTRY=your-docker-registry.com
TAG=latest

# HTTP/HTTPS Ports
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# MONITORING STACK (OPTIONAL)
# =============================================================================

# Prometheus & Grafana (uncomment to enable)
# PROMETHEUS_ENABLED=true
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=your-email@gmail.com

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Debug Mode (set to false in production)
DEBUG=false
SPRING_PROFILES_ACTIVE=prod

# JVM Options for Production
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DB_ENABLED=true
HEALTH_CHECK_REDIS_ENABLED=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup (optional - implement in your backup scripts)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_DIR=/opt/aksi/backups

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# IMPORTANT SECURITY REMINDERS:
# 1. Never commit actual values to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate secrets regularly
# 4. Use environment-specific values (dev/staging/prod)
# 5. Consider using Docker secrets or external secret management
# 6. Enable HTTPS in production
# 7. Regularly update base images and dependencies
# 8. Monitor logs for security events
# 9. Use principle of least privilege for database users
# 10. Implement proper firewall rules and network segmentation
